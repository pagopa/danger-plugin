{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2019"],
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ],
}
